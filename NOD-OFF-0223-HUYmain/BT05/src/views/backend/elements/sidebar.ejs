<%  
    let arrMenu = [
        {parent: false, name: 'Dashboard', icon: 'ion-ios-keypad-outline', link: `#`},
        {parent: true, child: [
          { name: 'List', icon: 'ion-document-text', link: `/admin/category`},
          { name: 'Form', icon: 'ion-compose', link: `/admin/category/form`},
        ], name: 'Category', icon: 'ion-clipboard', link: ``},
        {parent: false, name: 'Dashboard', icon: 'ion-ios-keypad-outline', link: `#`},
        {parent: true, child: [
          { name: 'List', icon: 'ion-document-text', link: `/admin/category`},
          { name: 'Form', icon: 'ion-compose', link: `/admin/category/form`},
        ], name: 'Category', icon: 'ion-clipboard', link: ``},
    ];
    
    let xhtmlMenu = '';
    arrMenu.forEach(menu => {
      if(menu.parent == false){
        xhtmlMenu += `<li class="nav-item">
                          <a href=" " class="nav-link">
                            <i class="${menu.icon}" style="margin-right: 10px;"></i>
                            <p>
                              ${menu.name}
                            </p>
                          </a>
                     </li>`;
      } else if(menu.parent == true){
        let childHtml = ''
        menu.child.forEach(function(childrenEntry){
          childHtml+= `
                      <li class="nav-item">
                        <a href="${menu.link}${childrenEntry.link}" class="nav-link">
                          <i class="${childrenEntry.icon}"></i>
                          <p>${childrenEntry.name}</p>
                        </a>
                      </li>
                      `
        })
        xhtmlMenu+=`
                    <li class="nav-item">
                      <a href="#" class="nav-link">
                        <i class="nav-icon ${menu.icon}"></i>
                        <p>
                          ${menu.name}
                          <i class="fas fa-angle-left right"></i>
                        </p>
                      </a>
                      <ul class="nav nav-treeview" style="display: none;">
                            ${childHtml}
                      </ul>
                    </li>
                `
      }
    });

%>


